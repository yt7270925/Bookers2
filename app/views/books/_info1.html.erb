<!--book,userのindexのuser info -->
<div class="row">
  <div class="col-md-3">
    <h1>User info</h1>
    <div>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user) do %>
          <i class="fas fa-user-cog edit"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>