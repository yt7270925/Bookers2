<!--book,userindex.showのNew Book -->
<div class="col-md-3 new-book">
  <h1 class="mt-3">New Book</h1>
    <%= form_with model: book do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <div><%= f.submit 'Create Book' %></div>
    <% end %>
</div>
