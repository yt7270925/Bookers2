<main>
  <p id="notice"></p>
  <div class="container book-edit">
    <div class="row">
      <div class="col-md-8">
        <h1>Editing Book</h1>
  
        <% if @book.errors.any? %>
          <%= @book.errors.count %> error prohibited this obj from being saved:
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  
        <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
            <div><%= f.submit 'Update Book' %></div>
            <%= link_to 'Show', book_path(@book) %>
            <%= '|' %>
            <%= link_to 'Back', books_path %>
        <% end %>
      </div>
    </div>
  </div>
</main>