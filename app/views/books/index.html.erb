<!-- index -->
<h1>Books</h1>
<p>title</p>
<p>Opinion</p>
<div>
  <% @books.each do |book| %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <p><%= link_to book.title, book_path(book) %></p>
  <p><%= book.body %></p>
</div>
<% end %>

<h1>User info</h1>
<div>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name <%= current_user.name %></p>
  <p>introduction <%= current_user.introduction %></p>
  <div><%= link_to "User Edit", edit_user_path(current_user) %></div>
</div>

<!-- 部分テンプレート New Book -->
<%= render 'list', book: @book %>