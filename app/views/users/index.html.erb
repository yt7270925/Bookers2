<h1>Users</h1>
<p>image</p>
<p>name</p>
<div>
  <% @users.each do |user| %>
  <%= image_tag user.get_profile_image(100,100) %>
  <p><%= user.name %></p>
  <p><%= link_to 'Show', user_path(user) %></p>
</div>
<% end %>

<h1>User info</h1>
<div>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name <%= current_user.name %></p>
  <p>introduction <%= current_user.introduction %></p>
  <div><%= link_to "User Edit", edit_user_path(current_user) %></div>
</div>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>