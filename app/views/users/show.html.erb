<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= link_to book.title, book_path(@user.books.ids) %></p>
  <p><%= book.body %></p>
</div>
<% end %>

<div class="row">
  <div class="col-md-3">
    <h1>User info</h1>
    <div>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user) do %>
          <i class="fas fa-user-cog edit"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- 部分テンプレート New Book -->
<%= render 'books/list', book: @book %>