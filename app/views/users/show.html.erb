<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= link_to book.title, book_path(@user.books.ids) %></p>
  <p><%= book.body %></p>
</div>
<% end %>

<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name <%= @user.name %></p>
  <p>introduction <%= @user.introduction %></p>
  <div class="row">
    <%= link_to edit_user_path(current_user) do %>
      <i class="fas fa-user-cog edit"></i>
    <% end %>
  </div>
</div>

<!-- 部分テンプレート New Book -->
<%= render 'books/list', book: @book %>